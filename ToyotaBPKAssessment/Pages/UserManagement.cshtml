@page
@model ToyotaBPKAssessment.Pages.UserManagementModel
@{
}
<h1>Users</h1>
<p>
    <a asp-page="UserEntry">Add a new User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Email Address
            </th>
            <th>
                Mailing Address
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.UserList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @item.MailAddress.Addr1 @item.MailAddress.Addr2 @item.MailAddress.City, @item.MailAddress.State @item.MailAddress.ZipCode
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./UserManagement" asp-route-id="@item.Id" asp-route-action="delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>